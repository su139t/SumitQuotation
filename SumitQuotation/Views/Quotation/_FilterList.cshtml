@{
    Layout = null;
}

@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                <input type="checkbox" id="SelectOne" name="SelectOne" value="@item.Quotation_Id" />
            </td>
            <td>
                @item.QuotationNo
            </td>
            <td>
                @item.QuotationDate.ToString("dd-MM-yyyy")
            </td>
            <td>
                @item.CustomerName
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { @id = item.Quotation_Id }, new { @class = "btn text-white btn-info btncreate" }) |
                @Html.ActionLink("Delete", "Delete", new { @id = item.Quotation_Id }, new { onclick = "return confirm('Are you sure you want to delete this record? ')", @class = " btn btn-danger btncreate " })
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="6">
            <h3>No data available</h3>
        </td>
    </tr>
}




